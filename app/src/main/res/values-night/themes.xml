<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shoplist" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimarySurface">@color/gray_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Shoplist.Indigo" parent="Theme.Shoplist">
        <item name="colorPrimary">@color/indigo_300</item>
        <item name="colorPrimaryVariant">@color/indigo_200</item>
        <item name="colorOnPrimary">@color/indigo_800</item>
        <item name="colorOnPrimarySurface">@color/indigo_700</item>
        <item name="colorSurface">@color/indigo_700</item>

        <item name="colorSecondary">@color/deep_orange_300</item>
        <item name="colorSecondaryVariant">@color/deep_orange_200</item>
        <item name="colorOnSecondary">@color/deep_orange_700</item>
    </style>

    <style name="Theme.Shoplist.Orange" parent="Theme.Shoplist">
        <item name="colorPrimary">@color/orange_300</item>
        <item name="colorPrimaryVariant">@color/orange_200</item>
        <item name="colorOnPrimary">@color/orange_800</item>
        <item name="colorOnPrimarySurface">@color/orange_700</item>
        <item name="colorSurface">@color/orange_700</item>

        <item name="colorSecondary">@color/deep_purple_300</item>
        <item name="colorSecondaryVariant">@color/deep_purple_200</item>
        <item name="colorOnSecondary">@color/deep_purple_700</item>
    </style>
</resources>