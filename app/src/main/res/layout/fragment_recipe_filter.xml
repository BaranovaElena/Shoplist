<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:context=".ui.recipe.RecipeFilterFragment">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/recipe_filter_chip_group"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        app:selectionRequired="true"
        app:singleLine="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/recipe_filter_chip_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_filter_chip_category_text"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/recipe_filter_chip_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_filter_chip_area_text"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
    </com.google.android.material.chip.ChipGroup>

    <Spinner
        android:id="@+id/recipe_filter_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_filter_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>